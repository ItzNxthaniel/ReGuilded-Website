@require "./include/variables.styl"
@require "./include/util-mixins.styl"

.download-page-feature
  &.section
    background-color: bg-colour[1]
    border: solid 1px alpha(white, 0.05)

    padding: spacing-size[2] spacing-size[3]
    border-radius: rounding-size[2]

    display: flex
    flex-direction: column
    align-items: center
    justify-content: center

  &.image
    fill: fg-colour[0]
    height: 2.5em
    width: auto

  &.title
    color: fg-colour[0]
    text-align: center

.download-page.download-item
  background-color: bg-colour[2]

.item-icon
  width: 10vw
  height: 10vw